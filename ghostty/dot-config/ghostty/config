command = "fish"

font-size = 11

font-family = "JetBrains Mono"
font-family-italic = "Cascadia Mono PL"
font-family-bold-italic = "Cascadia Mono PL"

font-codepoint-map = "U+EA60-U+EBEA=codicon"

theme = "Everforest Dark   Hard"
cursor-color = "#D3C6AA"

window-width = 1000000
window-height = 1000000

resize-overlay = never

keybind = "super+c=copy_to_clipboard"
keybind = "super+v=paste_from_clipboard"

keybind = "alt+equal=increase_font_size:2"
keybind = "alt+-=decrease_font_size:2"

keybind = "alt+backspace=new_tab"
keybind = "alt+s=new_split:right"
keybind = "alt+q=close_surface"

keybind = "alt+h=goto_split:left"
keybind = "alt+l=goto_split:right"

keybind = "alt+'=next_tab"
keybind = "alt+;=previous_tab"
keybind = "alt+shift+'=move_tab:+1"
keybind = "alt+shift+;=move_tab:-1"
